<h2>Users</h2>

<% if can? :manage, User %>

<table class="table table-striped">
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th>Admin</th>
    <th>Uploader</th>
    <th><%# edit %></th>
    <th><%# destroy %></th>
  </tr>
  
<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.email %></td>
    <td><%= user.role? :admin %></td>
    <td><%= user.role? :uploader %></td>
    <td><%= link_to "Edit", edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<% end %>
