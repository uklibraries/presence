<%= simple_form_for(@package) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= field_set_tag "Required fields" do -%>
      <%= f.input :creator, label: "Who (Creator)" %>
      <%= f.input :title, label: "What (Title)" %>
      <%= f.input :date, label: "When (Date)", as: :date_picker %>
      <%= f.association :access %>
      <%= f.association :retention %>

      <div class="js-dependent-fields" data-select-id="package_retention_id" data-option-value="<%= Retention.temporal.id %>">
        <%= f.input :retention_date, label: "Retain until", as: :date_picker %>
      </div>

    <% end -%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
