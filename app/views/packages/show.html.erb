<h2><%= @package.title %></h2>

<% [
     :creator,
     :title,
     # :date deliberately missing
     :access,
     :retention,
     # optional fields follwo
     :contributor,
     :coverage,
     :description,
   ].each do |field| -%>
<p>
  <b><%= field.to_s.humanize %>:</b>
  <%= @package.send(field) %>
</p>
<% end -%>

<p>
  <b>Format:</b>
  <%= @package.format.name %>
</p>

<%# :identifier deliberately missing %>

<p>
  <b>Language:</b>
  <%= @package.language.name %>
</p>

<% [
     :publisher,
     :relation,
     :rights,
     :source,
   ].each do |field| -%>
<p>
  <b><%= field.to_s.humanize %>:</b>
  <%= @package.send(field) %>
</p>
<% end -%>

<% if @subjects -%>
<p>
  <b>Subjects:</b> <br/ >
  <ul>
    <% @subjects.each do |subject| -%>
    <li><%= subject.subject %></li>
    <% end -%>
  </ul>
</p>
<% end -%>

<p>
  <b>Type:</b>
  <%= @package.type.name %>
</p>

<%= link_to 'Edit', edit_package_path(@package) %> |
<%= link_to 'Back', packages_path %>
