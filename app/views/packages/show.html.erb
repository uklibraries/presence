<h2><%= @package.title %></h2>

<p>
  <b>Who (Creator)</b>
  <%= @package.creator %>
</p>

<p>
  <b>What (Title)</b>
  <%= @package.title %>
</p>

<p>
  <b>When (Date)</b>
  <%= @package.date %>
</p>

<% [
     :access,
     :retention,
     # optional fields follow
   ].each do |field| -%>
<p>
  <b><%= field.to_s.humanize %>:</b>
  <%= render @package.send(field) %>
</p>
<% end -%>

<p>
  <b>Identifier:</b>
  <%= @package.identifier %>
</p>

<%= render 'assets/index' %>

<%= link_to 'Edit', edit_package_path(@package) %> |
<%= link_to 'Back', packages_path %>
